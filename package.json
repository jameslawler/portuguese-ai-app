{
  "name": "portuguese-ai-app",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:css\"",
    "dev:server": "wrangler dev",
    "dev:css": "npx @tailwindcss/cli -i ./src/client/input.css -o ./src/public/index.css --watch",
    "deploy": "wrangler deploy --minify",
    "htmx": "cp node_modules/htmx.org/dist/htmx.min.js src/public/htmx.min.js",
    "htmx:sse": "cp node_modules/htmx-ext-sse/dist/sse.min.js src/public/sse.min.js",
    "alpine": "cp node_modules/alpinejs/dist/cdn.min.js src/public/alpine.min.js",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:apply:local": "wrangler d1 migrations apply portuguese-ai",
    "db:apply:remote": "wrangler d1 migrations apply portuguese-ai --remote",
    "db:reset:local": "wrangler d1 execute portuguese-ai --local --file scripts/reset-auth.sql"
  },
  "dependencies": {
    "@tailwindcss/cli": "4.1.18",
    "@tailwindcss/typography": "0.5.19",
    "alpinejs": "3.15.3",
    "better-auth": "1.4.9",
    "drizzle-orm": "0.45.1",
    "hono": "4.11.4",
    "htmx-ext-sse": "2.2.4",
    "htmx.org": "2.0.8",
    "marked": "17.0.1",
    "openai": "6.16.0",
    "tailwindcss": "4.1.18"
  },
  "devDependencies": {
    "concurrently": "9.2.1",
    "drizzle-kit": "0.31.8",
    "wrangler": "4.54.0"
  }
}
